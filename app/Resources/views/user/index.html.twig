{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <h3>User list</h3>
    </div>


    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th colspan="2">Editing</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td><a href="{{ path('admin_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td><a class="btn btn-md btn-primary" href="{{ path('admin_show', { 'id': user.id }) }}">View</a></td>
                <td><a class="btn btn-md btn-primary" href="{{ path('admin_edit', { 'id': user.id }) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-lg btn-primary" href="{{ path('admin_new') }}">Create New User</a>

{% endblock %}
