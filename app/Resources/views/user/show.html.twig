{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <h3>User</h3>
    </div>


    <table class="record_list table table-striped">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-lg btn-primary" href="{{ path('admin_index') }}">Back to the list</a>

    <a class="btn btn-lg btn-primary" href="{{ path('admin_edit', { 'id': user.id }) }}">Edit</a>

    {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
